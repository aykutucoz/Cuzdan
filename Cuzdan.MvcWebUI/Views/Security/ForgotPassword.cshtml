@model Cuzdan.MvcWebUI.Models.Secutiry.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
}
    <div class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="/Home/Index"><b>Borsa</b></a>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-header">
                    <p>Sistemimize kayıtlı olan email adresinizi giriniz. Şifre yenileme linkini mail adresinize göndereceğiz.</p>
                </div>
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Şifre Yenile</p>

                    <form asp-action="ForgotPassword" asp-controller="Security" method="post">
                        <div class="input-group mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <p class="mt-3 mb-1">
                        <a href="/Security/Login">Giriş Yap</a>
                    </p>
                    <p class="mb-0">
                        <a href="/Security/Register" class="text-center">Kaydol</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->

    </div>

